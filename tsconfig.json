{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "bundler",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "types": ["vite/client", "vitest/globals"],
    "paths": {
      "@/*": ["./src/*"],
      "*": ["./*"]
    },
    "lib": ["ES2022", "dom", "dom.iterable", "scripthost"]
  },
  "include": [
    "./src/**/*.ts",
    "./src/**/*.tsx",
    "./src/**/*.vue",
    "./src/**/*.test.ts",
    "./src/**/*.test.tsx",
    "./vite.config.ts",
    "./tests/**/*.ts",
    "./tests/**/*.tsx"
  ],
  "exclude": ["node_modules"]
}
