{
  "name": "spending-management",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "npm run web:build && npx cap sync android && npm run android:build",
    "build:debug": "npm run web:build && npx cap sync android && npm run android:build:debug",
    "web:build": "vite build",
    "web:dev": "vite",
    "web:preview": "vite preview --port 4173 --strictPort",
    "android:build": "./android/gradlew -p android :app:assembleRelease",
    "android:build:debug": "./android/gradlew -p android :app:assembleDebug",
    "checks": "npm run checks:types && npm run checks:lint",
    "checks:types": "vue-tsc --noEmit",
    "checks:lint": "eslint .",
    "tests": "npm run tests:unit",
    "tests:unit": "vitest run",
    "cap:sync": "cap sync",
    "db:dev": "scripts/db-dev",
    "emulator:start": "scripts/emulator-start",
    "emulator:nuke": "scripts/emulator-nuke",
    "emulator:dev": "scripts/emulator-dev",
    "emulator:install": "scripts/emulator-install release",
    "emulator:install:debug": "scripts/emulator-install debug",
    "emulator:app:run": "scripts/emulator-install debug && scripts/emulator-run",
    "emulator:logcat": "scripts/emulator-logcat"
  },
  "dependencies": {
    "@capacitor/android": "^8.1.0",
    "@capacitor/app": "^8.0.1",
    "@capacitor/core": "^8.1.0",
    "@capacitor/filesystem": "^8.1.2",
    "@capacitor/haptics": "^8.0.0",
    "@capacitor/keyboard": "^8.0.0",
    "@capacitor/share": "^8.0.1",
    "@capacitor/status-bar": "^8.0.1",
    "@capawesome/capacitor-file-picker": "^8.0.2",
    "@ionic/storage": "^4.0.0",
    "@ionic/vue": "^8.7.17",
    "@ionic/vue-router": "^8.7.17",
    "@t3-oss/env-core": "^0.13.10",
    "cordova-sqlite-storage": "^7.0.0",
    "events": "^3.3.0",
    "ionicons": "^8.0.13",
    "pouchdb-adapter-cordova-sqlite": "^2.0.8",
    "pouchdb-browser": "^9.0.0",
    "vue": "^3.5.28",
    "vue-router": "^4.5.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@capacitor/cli": "^8.1.0",
    "@eslint/js": "^10.0.1",
    "@types/node": "^25.3.0",
    "@typescript-eslint/eslint-plugin": "^8.56.0",
    "@typescript-eslint/parser": "^8.56.0",
    "@vitejs/plugin-vue": "^6.0.4",
    "@vue/test-utils": "^2.4.6",
    "eslint": "^10.0.1",
    "eslint-plugin-vue": "^10.8.0",
    "fake-indexeddb": "^6.2.2",
    "globals": "^17.3.0",
    "jsdom": "^28.1.0",
    "typescript": "^5.9.3",
    "vite": "^7.3.1",
    "vitest": "^4.0.18",
    "vue-tsc": "^3.2.5"
  },
  "description": "An Ionic project"
}
